{
  "name": "ts-node-dev",
  "version": "1.1.0+d9f57971",
  "description": "Compiles your TS app and restarts when files are modified.",
  "keywords": [
    "restart",
    "reload",
    "supervisor",
    "monitor",
    "watch"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/whitecolor/ts-node-dev.git"
  },
  "license": "MIT",
  "bin": {
    "ts-node-dev": "./lib/bin.js",
    "tsnd": "./lib/bin.js"
  },
  "main": "./lib",
  "files": [
    "icons",
    "lib"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "scripts": {
    "ts-node-dev": "node ./lib/bin",
    "tsnd": "yarn ts-node-dev",
    "test": "ts-node -T node_modules/mocha/bin/mocha test/*.test.ts",
    "test-dev": "yarn ts-node-dev -T --respawn --deps --watch lib node_modules/mocha/bin/mocha test/*.test.ts --output",
    "test-docker": "docker-compose up",
    "ci": "yarn test",
    "ci-local": "docker run --name travis-debug -dit quay.io/travisci/ci-nodejs",
    "manual": "yarn ts-node test/manual/run.ts"
  },
  "dependencies": {
    "chokidar": "^3.4.0",
    "dateformat": "~1.0.4-1.2.3",
    "dynamic-dedupe": "^0.3.0",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "resolve": "^1.0.0",
    "rimraf": "^2.6.1",
    "source-map-support": "^0.5.12",
    "tree-kill": "^1.2.2",
    "ts-node": "^9.0.0",
    "tsconfig": "^7.0.0"
  },
  "peerDependencies": {
    "node-notifier": "*",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "node-notifier": {
      "optional": true
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "yalcSig": "d9f579717734fb03fdb5d45372df640e"
}
